---
image:
  repository: blakeblackshear/frigate
  tag: 0.10.1-aarch64
service:
  main:
    ports:
      rtmp:
        enabled: true
securityContext:
  privileged: true
persistence:
  data:
    enabled: true
    type: pvc
    accessMode: ReadWriteOnce    
    mountPath: /data
  usb:
    enabled: true
    type: hostPath
    mountPath: /dev/bus/usb
  cache:
    enabled: true
    type: emptyDir
    medium: Memory
    mountPath: /dev/shm  
nodeSelector:
  kassio/nvr-coral: "true"
podAnnotations:
  backup.velero.io/backup-volumes-excludes: cache